    <script>
        // ============================================
        // MENU DATA - Extracted from restaurant images
        // ============================================
        const menuData = {
            "Desayunos": [
                { name: "Tostada de Tomate", price: 0.90, desc: "Media tostada" },
                { name: "Tostada de Aceite", price: 0.90, desc: "Media tostada" },
                { name: "Tostada Mantequilla/Mixta", price: 0.90, desc: "Media tostada" },
                { name: "Tostada At√∫n y Tomate", price: 1.50, desc: "Media tostada" },
                { name: "Tostada At√∫n, Tomate y Queso", price: 1.70, desc: "Media tostada" },
                { name: "Tostada de Queso y Tomate", price: 1.50, desc: "Media tostada" },
                { name: "Tostada de Queso y Pavo", price: 1.70, desc: "Media tostada" },
                { name: "Tostada de Tomate y Pavo", price: 1.50, desc: "Media tostada" }
            ],
            "Especiales Desayuno": [
                { name: "Cr√™pes Chocolate", price: 3.50 },
                { name: "Msemen con Queso, Mermelada o Miel", price: 2.50 },
                { name: "Churros con Chocolate", price: 4.00 },
                { name: "Chocolate Caliente", price: 2.00 },
                { name: "Desayuno Especial ALBaraka", price: 8.00 }
            ],
            "Caf√©s": [
                { name: "Caf√© Solo", price: 1.60 },
                { name: "Caf√© con Leche", price: 1.60 },
                { name: "Caf√© Cortado", price: 1.60 },
                { name: "Caf√© Americano", price: 1.60 },
                { name: "Caf√© Bomb√≥n", price: 2.00 },
                { name: "Cola Cao", price: 1.80 }
            ],
            "T√©s": [
                { name: "T√© Marroqu√≠", price: 3.00 },
                { name: "T√© Sue√±os de Alhambra", price: 3.50 },
                { name: "T√© Albaye√≠n", price: 3.50 },
                { name: "T√© Pakistan√≠ con Leche", price: 4.00 }
            ],
            "Batidos & Zumos": [
                { name: "Fresa", price: 4.00 },
                { name: "Frutos Rojos", price: 4.00 },
                { name: "Aguacate", price: 4.00 },
                { name: "Pl√°tano", price: 4.00 },
                { name: "Pl√°tano, D√°tiles y Almendras", price: 5.50 }
            ],
            "Bocadillos": [
                { name: "Bocadillo de Queso y Manchego con Tomate", price: 3.50 },
                { name: "Bocadillo de At√∫n y Tomate", price: 4.50 },
                { name: "Bocadillo de At√∫n, Tomate y Queso", price: 5.00 },
                { name: "Bocadillo de Tortilla Francesa", price: 3.50 },
                { name: "Bocadillo de Tortilla Espa√±ola", price: 4.00 },
                { name: "Bocadillo de Tortilla Francesa, At√∫n y Pavo", price: 5.00 },
                { name: "Bocadillo de Calamares", price: 5.00 },
                { name: "Bocadillo de Pavo y Queso con Tomate", price: 4.00 },
                { name: "Bocadillo de Pechuga de Pollo", price: 5.00 },
                { name: "Kebab de Pollo Completo", price: 6.00 },
                { name: "Hamburguesa Ternera con Patatas Fritas", price: 8.00 },
                { name: "Hamburguesa Pollo con Patatas Fritas", price: 7.00 }
            ]
        };

        // ============================================
        // STATE MANAGEMENT
        // ============================================
        let currentOrder = {};
        let currentCategory = null;

        // ============================================
        // INITIALIZATION
        // ============================================
        function init() {
            renderCategories();
            loadFirstCategory();
            setupEventListeners();
        }

        function loadFirstCategory() {
            const firstCategory = Object.keys(menuData)[0];
            setActiveCategory(firstCategory);
        }

        // ============================================
        // CATEGORY MANAGEMENT
        // ============================================
        function renderCategories() {
            const container = document.getElementById('categoryTabs');
            const categories = Object.keys(menuData);

            categories.forEach(category => {
                const btn = document.createElement('button');
                btn.className = 'category-btn';
                btn.textContent = category;
                btn.addEventListener('click', () => setActiveCategory(category));
                container.appendChild(btn);
            });
        }

        function setActiveCategory(category) {
            currentCategory = category;

            // Update active button
            document.querySelectorAll('.category-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.textContent === category) {
                    btn.classList.add('active');
                }
            });

            // Render menu items
            renderMenuItems();
        }

        // ============================================
        // MENU RENDERING
        // ============================================
        function renderMenuItems() {
            const container = document.getElementById('menuItems');
            const items = menuData[currentCategory] || [];

            container.innerHTML = '';

            items.forEach((item, index) => {
                const itemElement = document.createElement('div');
                itemElement.className = 'menu-item';
                itemElement.innerHTML = `
                    <div class="menu-item-name">${item.name}</div>
                    ${item.desc ? `<div class="menu-item-desc">${item.desc}</div>` : ''}
                    <div class="menu-item-price">‚Ç¨${item.price.toFixed(2)}</div>
                `;

                itemElement.addEventListener('click', () => addToOrder(item, currentCategory));
                container.appendChild(itemElement);
            });
        }

        // ============================================
        // ORDER MANAGEMENT
        // ============================================
        function addToOrder(item, category) {
            const key = `${category}_${item.name}`;

            if (currentOrder[key]) {
                currentOrder[key].quantity += 1;
            } else {
                currentOrder[key] = {
                    name: item.name,
                    price: item.price,
                    quantity: 1,
                    category: category
                };
            }

            updateOrderDisplay();
        }

        function updateOrderDisplay() {
            renderOrderItems();
            updateTotals();
            updateButtons();
        }

        function renderOrderItems() {
            const container = document.getElementById('orderItems');

            if (Object.keys(currentOrder).length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üõí</div>
                        <div>Sin items en la orden</div>
                        <div style="font-size: 12px; margin-top: 8px;">Selecciona art√≠culos del men√∫</div>
                    </div>
                `;
                return;
            }

            container.innerHTML = '';

            Object.entries(currentOrder).forEach(([key, item]) => {
                const subtotal = item.price * item.quantity;
                const orderItemElement = document.createElement('div');
                orderItemElement.className = 'order-item';
                orderItemElement.innerHTML = `
                    <div class="order-item-details">
                        <div class="order-item-name">${item.name}</div>
                        <div class="order-item-price">‚Ç¨${item.price.toFixed(2)} √ó ${item.quantity} = ‚Ç¨${subtotal.toFixed(2)}</div>
                    </div>
                    <div class="order-item-controls">
                        <button class="qty-btn" data-key="${key}" data-action="minus">‚àí</button>
                        <input type="number" class="qty-input" value="${item.quantity}" data-key="${key}" min="1">
                        <button class="qty-btn" data-key="${key}" data-action="plus">+</button>
                        <button class="remove-btn" data-key="${key}" data-action="remove">‚úï</button>
                    </div>
                `;

                container.appendChild(orderItemElement);
            });

            // Add event listeners to quantity buttons and inputs
            document.querySelectorAll('.qty-btn').forEach(btn => {
                btn.addEventListener('click', handleQuantityChange);
            });

            document.querySelectorAll('.qty-input').forEach(input => {
                input.addEventListener('change', handleQuantityChange);
            });
        }

        function handleQuantityChange(e) {
            const key = e.target.dataset.key;
            const action = e.target.dataset.action;

            if (!currentOrder[key]) return;

            if (action === 'plus') {
                currentOrder[key].quantity += 1;
            } else if (action === 'minus') {
                if (currentOrder[key].quantity > 1) {
                    currentOrder[key].quantity -= 1;
                } else {
                    delete currentOrder[key];
                }
            } else if (action === 'remove') {
                delete currentOrder[key];
            } else if (e.target.classList.contains('qty-input')) {
                const newQty = parseInt(e.target.value) || 1;
                if (newQty > 0) {
                    currentOrder[key].quantity = newQty;
                } else {
                    delete currentOrder[key];
                }
            }

            updateOrderDisplay();
        }

        // ============================================
        // CALCULATIONS
        // ============================================
        function calculateTotals() {
            let subtotal = 0;

            Object.values(currentOrder).forEach(item => {
                subtotal += item.price * item.quantity;
            });

            const iva = subtotal * 0.21;
            const total = subtotal + iva;

            return {
                subtotal: subtotal.toFixed(2),
                iva: iva.toFixed(2),
                total: total.toFixed(2)
            };
        }

        function updateTotals() {
            const totals = calculateTotals();
            const summaryRows = document.querySelectorAll('.summary-row');

            summaryRows[0].querySelector('.summary-value').textContent = `‚Ç¨${totals.subtotal}`;
            summaryRows[1].querySelector('.summary-value').textContent = `‚Ç¨${totals.iva}`;
            summaryRows[2].querySelector('.summary-value').textContent = `‚Ç¨${totals.total}`;
        }

        // ============================================
        // COPY & SHARE FUNCTIONALITY
        // ============================================
        function generateOrderText() {
            let text = '=== PEDIDO / ORDER ===\n\n';

            Object.values(currentOrder).forEach(item => {
                const subtotal = (item.price * item.quantity).toFixed(2);
                text += `${item.quantity}x ${item.name} - ‚Ç¨${item.price.toFixed(2)} each = ‚Ç¨${subtotal}\n`;
            });

            const totals = calculateTotals();

            text += '\n‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ\n';
            text += `Subtotal: ‚Ç¨${totals.subtotal}\n`;
            text += `IVA (21%): ‚Ç¨${totals.iva}\n`;
            text += `TOTAL: ‚Ç¨${totals.total}\n`;
            text += '‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ';

            return text;
        }

        function copyToClipboard() {
            const orderText = generateOrderText();

            // Use modern Clipboard API
            navigator.clipboard.writeText(orderText).then(() => {
                showNotification('‚úì Orden copiada al portapapeles');
            }).catch(err => {
                // Fallback for older browsers
                const textarea = document.createElement('textarea');
                textarea.value = orderText;
                document.body.appendChild(textarea);
                textarea.select();
                document.execCommand('copy');
                document.body.removeChild(textarea);
                showNotification('‚úì Orden copiada al portapapeles');
            });
        }

        function showNotification(message) {
            const notification = document.createElement('div');
            notification.className = 'copy-notification';
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        // ============================================
        // BUTTON STATES
        // ============================================
        function updateButtons() {
            const copyBtn = document.getElementById('copyBtn');
            const hasItems = Object.keys(currentOrder).length > 0;

            copyBtn.disabled = !hasItems;
        }

        // ============================================
        // EVENT LISTENERS
        // ============================================
        function setupEventListeners() {
            document.getElementById('copyBtn').addEventListener('click', copyToClipboard);
            document.getElementById('clearBtn').addEventListener('click', () => {
                currentOrder = {};
                updateOrderDisplay();
            });
        }

        // ============================================
        // START APPLICATION
        // ============================================
        init();
    </script>
</body>
</html>
